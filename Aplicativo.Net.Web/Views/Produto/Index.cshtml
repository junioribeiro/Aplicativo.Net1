@model IEnumerable<Aplicativo.Net.Web.Models.ProdutoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h4>Listagem de produtos</h4>

<p>
    <a asp-action="Create" class="btn btn-success">Novo Produto</a>
</p>
<hr />
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProdutoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProdutoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.ActionLink("Atualizar", "Edit", new { id = item.ProdutoId }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.ProdutoId }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.ProdutoId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 style="color:orangered">Não há Produtos Cadastrados</h3>
}

