@model Aplicativo.Net.Web.Models.PedidoDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Detalhes do pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PedidoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PedidoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Solicitante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Solicitante)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Código</th>
                <th scope="col">Valor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProdutoModel)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Codigo</td>
                    <td>@item.Valor</td>
                </tr>
            }
        </tbody>
    </table>


</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PedidoId }, new { @class = "btn btn-warning" }) |
    <a asp-action="Index" class="btn btn-primary" role="button">Voltar para Listagem</a>
</div>
