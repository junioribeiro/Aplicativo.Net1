@model Aplicativo.Net.Web.Models.PedidoViewModel

@{
    ViewData["Title"] = "Edit";
}
@section css {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css">
}
<h4>Alteração de dados</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.PedidoId)
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solicitante" class="control-label"></label>
                <input asp-for="Solicitante" class="form-control" />
                <span asp-validation-for="Solicitante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Produtos" class="control-label">Produtos</label>
                <select asp-for="ProdutoIds" asp-items="Model.Produtos" class="form-control form-control-chosen" data-placeholder="Selecione..."></select>
                <span asp-validation-for="ProdutoIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary" role="button">Voltar para Listagem</a>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
    <script>

        $("#ProdutoIds")
            .find("option")
            //.prop("selected", true)
            .end()
            .chosen();        
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
